{
	# Redirect HTTP to HTTPS
}

# Redirect HTTP to HTTPS
http://34.150.25.115.sslip.io {
	redir https://34.150.25.115.sslip.io{uri} permanent
}

# HTTPS with automatic Let's Encrypt certificate
34.150.25.115.sslip.io {
	root * /srv

	# Reverse proxy API requests to backend
	handle /api/* {
		reverse_proxy api:5000
	}

	# Serve static files
	handle {
		file_server
	}
}

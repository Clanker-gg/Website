{
    # Keeps Caddy from trying to force HTTP users to HTTPS
    auto_https disable_redirects
}

# The Plain HTTP Block (No encryption)
http://34.150.25.115 {
    root * /srv
    file_server
}

# The Secure HTTPS Block (With self-signed encryption)
https://34.150.25.115 {
    root * /srv
    file_server
    tls internal
}
